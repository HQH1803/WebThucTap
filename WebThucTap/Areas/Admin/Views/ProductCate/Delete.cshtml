@model Models.EF.Category

@{
    ViewBag.Title = "Delete Category";
}

<h2>Delete Category</h2>

<h3>Are you sure you want to delete this category?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>@Html.DisplayNameFor(model => model.MetaTitle)</dt>
        <dd>@Html.DisplayFor(model => model.MetaTitle)</dd>

        <dt>@Html.DisplayNameFor(model => model.ParId)</dt>
        <dd>@Html.DisplayFor(model => model.ParId)</dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "ProductCate", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.CategoryId) <!-- Hidden field to hold the CategoryId -->

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Show", "ProductCate") <!-- Back to category list -->
        </div>
    }
</div>
